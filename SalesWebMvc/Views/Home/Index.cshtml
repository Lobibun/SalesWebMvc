@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Estilo do Jumbotron/Hero */
    .hero-section {
        background-color: #1a252f;
        border: 1px solid #3498db;
        border-radius: 8px;
        padding: 40px;
        margin-top: 20px;
        margin-bottom: 30px;
        text-align: center;
    }

    .hero-title {
        color: #3498db;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin-bottom: 15px;
    }

    .hero-subtitle {
        color: #ecf0f1;
        font-size: 18px;
        font-weight: 300;
    }

    /* Cards de Destaque (Mini Dashboard) */
    .info-card {
        background-color: transparent;
        border: 1px solid #3498db;
        border-radius: 6px;
        padding: 20px;
        transition: transform 0.3s;
        text-align: center;
        height: 100%;
    }

        .info-card:hover {
            background-color: rgba(52, 152, 219, 0.05);
            transform: translateY(-5px);
        }

        .info-card i {
            color: #3498db;
            font-size: 30px;
            margin-bottom: 15px;
            display: block;
        }

        .info-card h4 {
            color: #3498db;
            font-size: 14px;
            text-transform: uppercase;
            font-weight: bold;
        }

        .info-card p {
            color: #bdc3c7;
            font-size: 13px;
        }

    /* Footer de Contato */
    .contact-box {
        margin-top: 50px;
        padding: 20px;
        border-top: 1px solid #2c3e50;
        color: #95a5a6;
    }

    .contact-link {
        color: #3498db;
        text-decoration: none;
        font-weight: bold;
    }

        .contact-link:hover {
            text-decoration: underline;
        }
</style>

<div class="hero-section">
    <h1 class="hero-title">Nexus Sales Analytics</h1>
    <p class="hero-subtitle">High-performance data monitoring for modern commerce.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="info-card">
            <h4>Sales Management</h4>
            <p>Complete control over your record flow, status tracking, and revenue distribution.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-card">
            <h4>Advanced Filtering</h4>
            <p>Smart search capabilities by date range and department grouping for deep insights.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="info-card">
            <h4>Global Analytics</h4>
            <p>Visualize total performance and seller efficiency in a professional interface.</p>
        </div>
    </div>
</div>

<div class="contact-box text-center">
    <address>
