@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}

<style>
    /* Filtros e Layout Geral */
    .filter-container {
        display: flex;
        align-items: flex-end;
        gap: 15px;
        margin-bottom: 25px;
    }

    /* Card da Tabela com a borda fina azul solicitada */
    .custom-table-card {
        border: 1px solid #3498db;
        border-radius: 6px;
        overflow: hidden;
        background-color: transparent;
        box-shadow: none; /* Sem sombras fortes */
    }

    /* Barra Superior de Total */
    .card-header-blue {
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        font-size: 15px;
        border-bottom: 1px solid #2980b9;
    }

    /* TABELA: O segredo do visual profissional está aqui */
    .table-custom {
        margin-bottom: 0 !important;
    }

        .table-custom thead tr {
            /* Cor de cabeçalho "Premium": Um azul marinho bem escuro e denso */
            background-color: #1a252f !important;
            color: #ffffff !important;
        }

        .table-custom thead th {
            border: none !important;
            text-transform: uppercase;
            font-size: 11px;
            font-weight: 700;
            letter-spacing: 1.2px;
            padding: 15px !important;
            /* Linha sutil separando o header do corpo */
            border-bottom: 2px solid #3498db !important;
        }

        /* Linhas da Tabela */
        .table-custom tbody td {
            border-top: 1px solid #2c3e50 !important; /* Linha divisória suave */
            padding: 12px !important;
            vertical-align: middle !important;
            color: #ecf0f1;
        }

    /* Destaque para a coluna de valor */
    .amount-highlight {
        color: #3498db;
        font-weight: bold;
        font-size: 14px;
    }

    /* Efeito de destaque ao passar o mouse */
    .table-hover tbody tr:hover {
        background-color: rgba(52, 152, 219, 0.05) !important;
    }

    .text-right {
        text-align: right;
    }

    .text-center {
        text-align: center;
    }
</style>

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse" style="border: none; margin-bottom: 10px;">
    <div class="container-fluid">
        <form class="navbar-form" role="search">
            <div class="filter-container">
                <div class="form-group">
                    <label style="display:block; color: #bdc3c7; font-size: 12px; margin-bottom: 4px;">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label style="display:block; color: #bdc3c7; font-size: 12px; margin-bottom: 4px;">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
                <button type="submit" class="btn btn-primary" style="background-color: #3498db; border: none; font-weight: bold;">Filter</button>
            </div>
        </form>
    </div>
</nav>

<div class="custom-table-card">
    <div class="card-header-blue">
        Total sales: <strong>@Model.Sum(obj => obj.Amount).ToString("C2")</strong>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-custom">
            <thead>
                <tr>
                    <th class="text-center">ID</th>
                    <th>DATE</th>
                    <th>SELLER</th>
                    <th>DEPARTMENT</th>
                    <th class="text-right">AMOUNT</th>
                    <th class="text-center">STATUS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center" style="color: #95a5a6;">@item.Id</td>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td><strong>@item.Seller.Name</strong></td>
                        <td>@item.Seller.Department.Name</td>
                        <td class="text-right amount-highlight">
                            @item.Amount.ToString("N2")
                        </td>
                        <td class="text-center">
                            @item.Status
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>