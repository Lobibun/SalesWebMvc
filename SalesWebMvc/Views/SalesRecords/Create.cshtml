@model SalesWebMvc.Models.ViewModels.SalesRecordFormViewModel

@{
    ViewData["Title"] = "New Sale Record";
}

<style>
    /* Card centralizado para formulário */
    .form-card-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .custom-form-card {
        border: 1px solid #3498db;
        border-radius: 8px;
        overflow: hidden;
        width: 100%;
        max-width: 500px;
        background-color: #1a252f;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    }

    .card-header-blue {
        background-color: #3498db;
        color: white;
        padding: 15px 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .card-body-form {
        padding: 25px;
    }

    .form-label-custom {
        color: #3498db;
        font-weight: 600;
        font-size: 13px;
        margin-bottom: 5px;
    }

    .form-control-custom {
        background-color: #2c3e50 !important;
        border: 1px solid #34495e !important;
        color: white !important;
        margin-bottom: 15px;
    }

        .form-control-custom:focus {
            border-color: #3498db !important;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25) !important;
        }

    .btn-save {
        background-color: #3498db;
        color: white;
        font-weight: bold;
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        transition: background 0.3s;
    }

        .btn-save:hover {
            background-color: #2980b9;
            color: white;
        }

    .btn-back {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #95a5a6;
        text-decoration: none;
        font-size: 13px;
    }

        .btn-back:hover {
            color: white;
        }
</style>

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="form-card-container">
    <div class="custom-form-card">
        <div class="card-header-blue">
            Register Transaction
        </div>
        <div class="card-body-form">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="SalesRecord.Date" class="form-label-custom">Sale Date</label>
                    <input asp-for="SalesRecord.Date" class="form-control form-control-custom" type="date" />
                </div>

                <div class="form-group">
                    <label asp-for="SalesRecord.Amount" class="form-label-custom">Total Amount</label>
                    <input asp-for="SalesRecord.Amount" class="form-control form-control-custom" placeholder="0.00" />
                </div>

                <div class="form-group">
                    <label asp-for="SalesRecord.Status" class="form-label-custom">Status</label>
                    <select asp-for="SalesRecord.Status" class="form-control form-control-custom"
                            asp-items="Html.GetEnumSelectList<SalesWebMvc.Models.Enums.SaleStatus>()">
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="SalesRecord.SellerId" class="form-label-custom">Responsible Seller</label>
                    <select asp-for="SalesRecord.SellerId" class="form-control form-control-custom"
                            asp-items="@(new SelectList(Model.Sellers, "Id", "Name"))">
                    </select>
                </div>

                <button type="submit" class="btn-save">Confirm Sale</button>
                <a asp-action="Index" class="btn-back">Cancel and Return</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}