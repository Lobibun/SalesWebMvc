@{
    ViewData["Title"] = "Sales Records";
}

<style>
    /* Estilos específicos para esta página */
    .custom-search-card {
        border: 1px solid #3498db;
        border-radius: 6px;
        overflow: hidden;
        background-color: transparent;
        margin-bottom: 20px;
    }

    .card-header-blue {
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        font-size: 15px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .card-body-custom {
        padding: 20px;
        background-color: rgba(26, 37, 47, 0.4);
    }

    .control-label {
        color: #bdc3c7;
        font-size: 12px;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #2c3e50;
        border: 1px solid #34495e;
        color: white;
    }

    /* Estilo do botão de nova venda para combinar com o sistema */
    .btn-create {
        background-color: #27ae60; /* Verde para destacar 'Novo' */
        color: white;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 4px;
        text-decoration: none;
        transition: background 0.3s;
    }

        .btn-create:hover {
            background-color: #2ecc71;
            color: white;
            text-decoration: none;
        }

    .btn-submit {
        background-color: #3498db;
        border: none;
        color: white;
        font-weight: bold;
        width: 100%;
        margin-top: 10px;
    }

        .btn-submit:hover {
            background-color: #2980b9;
            color: white;
        }
</style>

<h2>@ViewData["Title"]</h2>

<div class="row" style="margin-top: 20px;">
    <div class="col-md-12">
        <a asp-action="Create" class="btn-create">
            <i class="glyphicon glyphicon-plus"></i> Record New Sale
        </a>
    </div>
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-md-6">
        <div class="custom-search-card">
            <div class="card-header-blue">Simple Search</div>
            <div class="card-body-custom">
                <form asp-action="SimpleSearch">
                    <div class="form-group">
                        <label class="control-label">Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-submit">Run Simple Search</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="custom-search-card">
            <div class="card-header-blue">Grouping Search</div>
            <div class="card-body-custom">
                <form asp-action="GroupingSearch">
                    <div class="form-group">
                        <label class="control-label">Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-submit">Run Grouping Search</button>
                </form>
            </div>
        </div>
    </div>
</div>