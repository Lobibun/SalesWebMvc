@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<style>
    .custom-table-card {
        border: 1px solid #3498db;
        border-radius: 6px;
        overflow: hidden;
        margin-top: 20px;
    }

    .card-header-blue {
        background-color: #3498db;
        color: white;
        padding: 12px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-custom {
        margin-bottom: 0 !important;
    }

        .table-custom thead tr {
            background-color: #1a252f !important;
            color: white !important;
        }

        .table-custom thead th {
            border-bottom: 2px solid #3498db !important;
            text-transform: uppercase;
            font-size: 11px;
            padding: 15px !important;
        }

        .table-custom tbody td {
            border-top: 1px solid #2c3e50 !important;
            padding: 12px !important;
            color: #ecf0f1;
        }

    .salary-highlight {
        color: #3498db;
        font-weight: bold;
    }

    .btn-create {
        background-color: #2980b9;
        border: 1px solid #ffffff; 
        color: white !important;
        padding: 6px 15px;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        font-size: 13px;
        transition: all 0.3s;
    }

        .btn-create:hover {
            background-color: #ecf0f1;
            color: #2980b9;
        }

    .action-link {
        color: #3498db;
        font-weight: bold;
        text-decoration: none;
        margin: 0 3px;
        font-size: 12px;
    }

        .action-link:hover {
            color: white;
            text-decoration: underline;
        }
</style>

<h2>@ViewData["Title"]</h2>

<div class="custom-table-card">
    <div class="card-header-blue">
        <span>Active Sellers</span>
        <a asp-action="Create" class="btn-create">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-custom">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="text-center">Birth Date</th>
                    <th class="text-right">Base Salary</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@Html.DisplayFor(modelItem => item.Name)</strong></td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="text-center">@item.BirthDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-right salary-highlight">
                            @item.BaseSalary.ToString("N2")
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="action-link">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="action-link" style="color:#e74c3c;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>