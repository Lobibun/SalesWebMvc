@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Register New Seller";
}

<style>
    .form-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .custom-form-card {
        border: 1px solid #3498db;
        border-radius: 6px;
        overflow: hidden;
        width: 100%;
        max-width: 600px;
    }

    .card-header-blue {
        background-color: #3498db;
        color: white;
        padding: 12px 20px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .card-body-custom {
        padding: 25px;
        background-color: rgba(26, 37, 47, 0.4);
    }

    .control-label {
        color: #bdc3c7;
        font-size: 12px;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        background-color: #2c3e50;
        border: 1px solid #34495e;
        color: white;
        margin-bottom: 15px;
    }

        .form-control:focus {
            border-color: #3498db;
            background-color: #2c3e50;
            color: white;
            box-shadow: none;
        }

    /* Estilo para o Select (Dropdown) */
    select.form-control option {
        background-color: #2c3e50;
        color: white;
    }

    .btn-create {
        background-color: #3498db;
        border: none;
        color: white;
        padding: 12px;
        font-weight: bold;
        width: 100%;
        text-transform: uppercase;
    }

        .btn-create:hover {
            background-color: #2980b9;
            color: white;
        }

    .back-link {
        display: block;
        margin-top: 15px;
        color: #95a5a6;
        text-decoration: none;
        font-size: 13px;
        text-align: center;
    }
</style>

<div class="form-wrapper">
    <div class="custom-form-card">
        <div class="card-header-blue">New Seller Registration</div>
        <div class="card-body-custom">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label class="control-label">Full Name</label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>

                <label class="control-label">Email Address</label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>

                <label class="control-label">Birth Date</label>
                <input asp-for="Seller.BirthDate" class="form-control" type="date" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>

                <label class="control-label">Base Salary (N2)</label>
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="0,000.00" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>

                <label class="control-label">Department</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>

                <button type="submit" class="btn btn-create">Confirm Registration</button>
            </form>
            <a asp-action="Index" class="back-link">← Return to Sellers List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}