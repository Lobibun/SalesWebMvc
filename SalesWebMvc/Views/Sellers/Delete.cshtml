@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Terminating Seller";
}

<style>
    .delete-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .custom-delete-card {
        border: 1px solid #e74c3c;
        border-radius: 6px;
        overflow: hidden;
        width: 100%;
        max-width: 500px;
    }

    .card-header-red {
        background-color: #e74c3c;
        color: white;
        padding: 12px 20px;
        font-weight: bold;
        text-align: center;
    }

    .card-body-custom {
        padding: 25px;
        background-color: rgba(44, 19, 19, 0.4);
        text-align: center;
    }
</style>

<div class="delete-wrapper">
    <div class="custom-delete-card">
        <div class="card-header-red">Confirm Seller Deletion</div>
        <div class="card-body-custom">
            <p style="color: #ff7675; font-weight: bold;">Are you sure you want to remove this employee?</p>
            <h3 style="color: white; margin-bottom: 30px;">@Model.Name</h3>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger" style="width: 100%; font-weight: bold; padding: 12px;">Yes, Remove Seller</button>
            </form>
            <a asp-action="Index" style="display: block; margin-top: 15px; color: #95a5a6;">No, Keep it</a>
        </div>
    </div>
</div>