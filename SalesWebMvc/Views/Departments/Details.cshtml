@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<style>
    .details-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 40px;
    }

    .custom-details-card {
        border: 1px solid #3498db;
        border-radius: 6px;
        overflow: hidden;
        width: 100%;
        max-width: 500px;
    }

    .card-header-blue {
        background-color: #3498db;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .card-body-custom {
        padding: 30px;
        background-color: rgba(26, 37, 47, 0.4);
    }

    .info-label {
        color: #3498db;
        font-size: 12px;
        text-transform: uppercase;
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .info-value {
        color: white;
        font-size: 18px;
        margin-bottom: 20px;
        display: block;
    }

    .btn-action-edit {
        background-color: #3498db;
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
    }

        .btn-action-edit:hover {
            background-color: #2980b9;
            color: white;
        }

    .back-link {
        color: #95a5a6;
        text-decoration: none;
        font-size: 13px;
    }

        .back-link:hover {
            color: #3498db;
            text-decoration: underline;
        }
</style>

<div class="details-wrapper">
    <div class="custom-details-card">
        <div class="card-header-blue">Department Info</div>

        <div class="card-body-custom">
            <span class="info-label">Name</span>
            <span class="info-value">@Html.DisplayFor(model => model.Name)</span>

            <hr style="border-top: 1px solid #2c3e50; margin-bottom: 25px;" />

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-action-edit">Edit Name</a>
                <br /><br />
                <a asp-action="Index" class="back-link">← Back to List</a>
            </div>
        </div>
    </div>
</div>