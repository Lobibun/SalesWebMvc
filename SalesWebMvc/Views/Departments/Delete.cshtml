@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<style>
    .delete-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 40px;
    }

    .custom-delete-card {
        border: 1px solid #e74c3c; /* Borda vermelha para atenção */
        border-radius: 6px;
        overflow: hidden;
        width: 100%;
        max-width: 500px;
    }

    .card-header-red {
        background-color: #e74c3c; /* Header vermelho */
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .card-body-custom {
        padding: 30px;
        background-color: rgba(44, 19, 19, 0.4); /* Fundo com leve tom avermelhado */
    }

    .warning-text {
        color: #ff7675;
        font-weight: bold;
        display: block;
        margin-bottom: 20px;
        text-align: center;
    }

    .info-label {
        color: #95a5a6;
        font-size: 11px;
        text-transform: uppercase;
    }

    .info-value {
        color: white;
        font-size: 20px;
        display: block;
        margin-bottom: 30px;
    }

    .btn-delete-confirm {
        background-color: #e74c3c;
        border: none;
        color: white;
        padding: 10px 25px;
        font-weight: bold;
        width: 100%;
        margin-bottom: 15px;
    }

        .btn-delete-confirm:hover {
            background-color: #c0392b;
        }

    .back-link {
        color: #95a5a6;
        text-decoration: none;
        font-size: 13px;
    }
</style>

<div class="delete-wrapper">
    <div class="custom-delete-card">
        <div class="card-header-red">Confirm Exclusion</div>

        <div class="card-body-custom">
            <span class="warning-text">Are you sure you want to delete this department?</span>

            <div class="text-center">
                <span class="info-label">Department Name</span>
                <span class="info-value">@Html.DisplayFor(model => model.Name)</span>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Yes, Delete Department" class="btn btn-delete-confirm" />
                </form>

                <a asp-action="Index" class="back-link">No, keep it. Back to List</a>
            </div>
        </div>
    </div>
</div>